.navbar-padding
  margin-top: 90px

.navbar
  position: fixed
  border-bottom: 1px solid #EEE
  left: 0
  top: 0
  width: 100%
  height: 70px
  line-height: 1
  z-index: 999
  background: rgba(255,255,255,0.9)
  text-transform: uppercase
  
  a, a:visited, a:hover
    color: #555
  
  .container
    width: 1000px
    margin: 0 auto
  
  .logo
    float: left
    height: 50px
    padding: 15px
    
    img
      height: 50px
  
  .nav-items
    float: left
    
    a
      line-height: 67px
      border-bottom: 3px solid transparent
      padding: 0 20px
      display: block
      float: left
      margin-right: 10px
      transition: border-color .2s linear
    a.active
      border-color: #777
    a:hover
      border-color: #2EA7E0
  
  .nav-action-items
    float: right
    height: 30px
    margin: 20px 0
    line-height: 30px
    
    .link-item
      padding: 0 20px
    
    .item
      display: inline-block